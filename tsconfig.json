{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"],
      "react": ["./node_modules/@types/react"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2022",
    "typeRoots": ["types"],
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
